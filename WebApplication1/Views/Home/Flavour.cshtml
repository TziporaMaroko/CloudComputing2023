@model WebApplication1.Models.Flavour
@{
	ViewData["Title"] = Html.DisplayNameFor(model => model.Name);
	Layout = "~/Views/Shared/ProjectLayout.cshtml";
}

<!-- breadcrumb Start-->
<div class="page-notification">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb justify-content-center">
						<li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
						<li class="breadcrumb-item"><a asp-action="Flavours">Shop</a></li>
						<li class="breadcrumb-item"><a href="#">@Html.DisplayFor(model => model.Name)</a></li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
</div>
<div class="site-section">
	<div class="container">
		<div class="row">
			<div class="col-md-6 mb-20">
				<img src="~/assets/img/NewFolder/@Html.DisplayFor(model => model.ImageURL)" alt="" class="img-fluid">
			</div>
			<div class="col-md-6">
				<h2 class="text-black">@Html.DisplayFor(model => model.Name)</h2>
				<p class="mb-4">@Html.DisplayFor(model => model.Description)</p>
				<p><strong class="text-primary h4">@Html.DisplayFor(model => model.Price)$ per liter</strong></p>
				<div class="mb-1 d-flex">
					<label for="option-sm" class="d-flex mr-3 mb-3">
						<span class="d-inline-block mr-2" style="top:-2px; position: relative;"><input type="radio" id="option-sm" name="shop-sizes"></span> <span class="d-inline-block text-black">1/4 Liter</span>
					</label>
					<label for="option-md" class="d-flex mr-3 mb-3">
						<span class="d-inline-block mr-2" style="top:-2px; position: relative;"><input type="radio" id="option-md" name="shop-sizes"></span> <span class="d-inline-block text-black">1/2 Liter</span>
					</label>
					<label for="option-lg" class="d-flex mr-3 mb-3">
						<span class="d-inline-block mr-2" style="top:-2px; position: relative;"><input type="radio" id="option-lg" name="shop-sizes"></span> <span class="d-inline-block text-black">Liter</span>
					</label>
				</div>
				<div class="mb-5">
					<div class="quantity buttons_added">
						<input type="button" value="-" class="minus"><input type="number" step="1" min="1" max="" name="quantity" value="1" title="Qty" class="input-text qty text" size="4" pattern="" inputmode=""><input type="button" value="+" class="plus">
					</div>
					<!--<div class="input-group mb-3" style="max-width: 120px;">
						<div class="input-group-prepend">
							<button class="btn btn-outline-primary js-btn-minus" type="button">&minus;</button>
						</div>
						<input type="text" class="form-control text-center" value="1" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
						<div class="input-group-append">
							<button class="btn btn-outline-primary js-btn-plus" type="button">&plus;</button>
						</div>-->
				</div>
				<div class="row justify-content-left ml-1">
					<div class="room-btn">
						<a href="#" class="border-btn">Add To Cart</a>
					</div>
				</div>
			</div>
			<!--<p><a href="cart.html" class="buy-now btn btn-sm btn-primary">Add To Cart</a></p>-->
			<!-- Button -->
			

		</div>
	</div>
</div>

